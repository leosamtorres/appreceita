
<style type="text/css">
    #divBackgroupEscuro {
        margin: 0px;
        padding: 0px;
        position: fixed;
        right: 0px;
        top: 0px;
        width: 100%;
        height: 100%;
        background-color: #000;
        z-index: 55555;
        opacity: .4;
        filter: alpha(opacity=70);
    }

    #divBackgroupEscuroConfirma {
        margin: 0px;
        padding: 0px;
        position: fixed;
        right: 0px;
        top: 0px;
        width: 100%;
        height: 100%;
        background-color: #000;
        z-index: 55555;
        opacity: .4;
        filter: alpha(opacity=70);
    }

    #divErro, #divSucesso, #divAlerta, #divConfirma {
        position: absolute;
        top: 30%;
        z-index: 99999;
        width: 100% !important;
    }
</style>

<script type="text/javascript">
    function Mensagem(pTipo, pMensagem) {

        $('#divBackgroupEscuro').show();

        if (pTipo == 'Erro') {
            $('#lblMsgErro').html("");
            $('#divErro').show(200);
            $('#lblMsgErro').html(pMensagem);
        }
        else if (pTipo == 'Sucesso') {
            $('#lblMsgSucesso').html("");
            $('#divSucesso').show(200);
            $('#lblMsgSucesso').html(pMensagem);
        }
        else if (pTipo == 'Alerta') {
            $('#lblMsgAlerta').html("");
            $('#divAlerta').show(200);
            $('#lblMsgAlerta').html(pMensagem);
        }
        else if (pTipo == 'ConfirmaDerrubarSessaoAtiva') {
            //alert('teste');
            
        }

        $('.close').click(function () {
            FecharTodasMensagens();
        });

        $('#divBackgroupEscuro').click(function () {
            FecharTodasMensagens();
        });

        $('.close').focus();

    }

    function ConfirmaMatarSessaoAtiva(pMensagem, pCodigoExcluir) {
        $('#divBackgroupEscuroConfirmaDerrubarSessaoAtiva').show(); //background
        $('#lblMsgConfirmaDerrubarSessaoAtiva').html("");
        $('#divConfirmaDerrubarSessaoAtiva').show(200);
        $('#lblMsgConfirmaDerrubarSessaoAtiva').html(pMensagem);

        $('#btnSimDerrubarSessaoAtiva').attr("onclick", "ExcluirSessaoAtiva('" + pCodigoExcluir + "')");
        $("#btnSimDerrubarSessaoAtiva").focus();


        $('#btnNãoDerrubarSessaoAtiva').click(function () {
            FecharTodasMensagens();
        });
    }

    function Confirma(pCodigoExcluir) {
        $('#divBackgroupEscuroConfirma').show();
        $('#divConfirma').show(200);

        $('#btnSimConfirmaExclusao').attr("onclick", "Excluir('" + pCodigoExcluir + "')");
        $("#btnSimConfirmaExclusao").focus();


        $('#btnNãoConfirmaExclusao').click(function () {
            FecharTodasMensagens();
        });
    }

    function ConfirmaMatarSessaoAtivaNavegador(pMensagem, pCodigoExcluir) {
        $('#divBackgroupEscuroConfirmaDerrubarSessaoAtiva').show(); //background
        $('#lblMsgConfirmaDerrubarSessaoAtiva').html("");
        $('#divConfirmaDerrubarSessaoAtiva').show(200);
        $('#lblMsgConfirmaDerrubarSessaoAtiva').html(pMensagem);

        $('#btnSimDerrubarSessaoAtiva').attr("onclick", "ExcluirSessaoAtivaNavegador('" + pCodigoExcluir + "')");
        $("#btnSimDerrubarSessaoAtiva").focus();


        $('#btnNãoDerrubarSessaoAtiva').click(function () {
            FecharTodasMensagens();
        });
    }
    
</script>

<div id="divBackgroupEscuro"  hidden></div>
<div id="divErro" class="alert alert-danger alert-dismissible" hidden>
    <button type="button" class="close" id="btnfecharErro">×</button>
    <h4><i class="icon fa fa-ban"></i> Erro!</h4>
    <label id="lblMsgErro"></label>
</div>

<div id="divSucesso" class="alert alert-success alert-dismissible" hidden>
    <button type="button" class="close" id="btnfecharSucesso">×</button>
    <h4><i class="icon fa fa-check"></i> Sucesso!</h4>
    <label id="lblMsgSucesso"></label>
</div>

<div id="divAlerta" class="alert alert-info alert-dismissible" hidden>
    <button type="button" class="close" id="btnfecharAlerta">×</button>
    <h4><i class="icon fa fa-info"></i> Alerta!</h4>
    <label id="lblMsgAlerta"></label>
</div>

<div id="divBackgroupEscuroConfirmaDerrubarSessaoAtiva" hidden></div>
<div id="divConfirmaDerrubarSessaoAtiva" class="alert alert-info alert-dismissible" hidden>
    <h4><i class="icon fa fa-question"></i> Alerta!</h4>
    <label id="lblMsgConfirmaDerrubarSessaoAtiva"></label>
    <div class="pull-right">
        <button class="btn btn-success" id="btnSimDerrubarSessaoAtiva">Sim</button>
        <button type="button" class="btn btn-danger" id="btnNãoDerrubarSessaoAtiva">Não</button>
    </div>
</div>

<div id="divBackgroupEscuroConfirma" hidden></div>
<div id="divConfirma" class="alert alert-info alert-dismissible" hidden>
    <h4><i class="icon fa fa-question"></i> Mensagem de Confirmação!</h4>
    <label id="lblMsgConfirma">Tem Certeza que Deseja excluir o Registro?</label>
    <div class="pull-right">
        <button class="btn btn-success" id="btnSimConfirmaExclusao">Sim</button>
        <button type="button" class="btn btn-danger" id="btnNãoConfirmaExclusao">Não</button>
    </div>

</div>